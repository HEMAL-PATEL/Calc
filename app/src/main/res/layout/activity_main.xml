<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/prev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""/>

    <EditText
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="example: 2+2^2 - sin (3-20%4)"
        android:imeOptions="actionGo"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:text="Supported operations:\n
+   add expressions\n
-   subtract expressions or change sign\n
*   multiply expressions\n
/   divide expressions\n
%   get the remainder\n
^   calculate power\n
()   group expressions\n
sin   calculate sine (degrees)\n
cos   calculate cosine (degrees)\n
tan   calculate tangent (degrees)"/>
</LinearLayout>
